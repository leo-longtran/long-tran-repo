{
  "name": "long-tran-repo",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:longhoccongnghe/long-tran-repo.git",
  "author": "long-tran-dss <long.tran@dssolution.jp>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "test:cov": "jest --coverage",
    "build": "nest build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.5",
    "nestjs-pino": "^3.4.0",
    "@nestjs/cli": "^9.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "<rootDir>",
      "<rootDir>"
    ],
    "testRegex": ".*\\.(endpoint-spec|spec)\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@\\/(.*)$": "<rootDir>/src/$1"
    }
  }
}